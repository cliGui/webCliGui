{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "esnext",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.d.ts"]
}
